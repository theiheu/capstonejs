{
  "version": 2,
  "name": "capstone-project",
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/admin/view/admin.html",
      "use": "@vercel/static",
      "config": { "distDir": "admin" }
    },
    {
      "src": "src/customer/customer.html",
      "use": "@vercel/static",
      "config": { "distDir": "customer" }
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/customer/$1"
    }
  ]
}
